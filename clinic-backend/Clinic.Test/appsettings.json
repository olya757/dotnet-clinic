{
    "ConnectionStrings": {
      "Context": "Data Source=(LocalDb)\\MSSQLLocalDB;Initial Catalog=clinic_test;Persist Security Info=True;Integrated Security=SSPI;"
    },
    "Serilog": {
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft": "Warning",
          "Microsoft.Hosting.Lifetime": "Information",
          "System": "Warning",
          "Microsoft.AspNetCore": "Warning"
        }
      },
      "WriteTo": [
        {
          "Name": "Console",
          "Args": {
            "outputTemplate": "[{Timestamp:HH:mm:ss:fff} {Level:u3} ({CorrelationId})] {Message:lj}{NewLine}{Exception}"
          }
        },
        {
          "Name": "RollingFile",
          "Args": {
            "path": "./logs/log-{Date}.txt",
            "rollingInterval": "Day",
            "outputTemplate": "[{Timestamp:HH:mm:ss:fff} {Level:u3} ({CorrelationId})] {Message:lj}{NewLine}{Exception}"
          }
        },
        {
          "Name": "Seq",
          "Args": {
            "serverUrl": "http://localhost:5341"
          }
        }
      ]
    },
    "AllowedHosts": "*",
    "IdentityServer": {
      "Uri": "https://localhost:7185"
    }
  }